{# templates/option/edit.html.twig #}

<!DOCTYPE html>
<html>
<head>
    <title>Edytuj opcję odpowiedzi</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
        }

        h1 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        form {
            width: 400px;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 10px;
        }

        input[type="number"],
        input[type="text"] {
            width: 100%;
            padding: 8px;
            font-size: 16px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button[type="submit"] {
            display: inline-block;
            padding: 8px 16px;
            margin-top: 10px;
            font-size: 16px;
            background-color: #4a90e2;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            text-decoration: none;
        }
    </style>
</head>
<body>
<h1>Edytuj opcję odpowiedzi</h1>

<form action="{{ path('edit_option', {'surveyId': surveyId, 'questionId': questionId, 'optionId': optionId}) }}" method="post">
    <input type="hidden" name="_method" value="PUT">

    <label for="value">Wartość:</label>
    <input type="number" id="value" name="value" value="{{ option.value }}" min="1" required>

    <label for="content">Treść:</label>
    <input type="text" id="content" name="content" value="{{ option.content }}" required>

    <button type="submit">Zapisz zmiany</button>
</form>
</body>
</html>
